<Window x:Class="WpfTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTimer"
        mc:Ignorable="d"
        Title="Таймер" Height="250" Width="400">
    <StackPanel Background="Azure">
        <Label x:Name="lblForTime" FontSize="40" HorizontalAlignment="Center"/>
        <TextBox x:Name="txtBoxForInputTime" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,0,0,5"/>
        <Button x:Name="btnOff" Height="30" Width="100" Margin="0,0,0,5" Content="Выключить"/>
        <Label x:Name="lblForRemainingTime" FontSize="40" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
